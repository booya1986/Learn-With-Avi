{
  "name": "learnwithavi",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "type-check": "tsc --noEmit",
    "test:unit": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test": "npm run type-check && npm run lint && npm run test:unit",
    "ci": "npm run type-check && npm run lint && npm run test:unit && npm run build",
    "clean": "rm -rf .next .turbo node_modules/.cache",
    "clean:full": "rm -rf .next .turbo node_modules && npm install",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "validate:env": "tsx scripts/validate-env.ts",
    "deps:check": "npm outdated",
    "deps:update": "npx npm-check-updates -u",
    "typecheck:watch": "tsc --noEmit --watch",
    "lint:fix": "eslint --fix 'src/**/*.{ts,tsx}'",
    "validate": "npm run type-check && npm run lint && npm run test:unit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "migrate:config": "tsx scripts/migrate-config-to-db.ts",
    "docs:generate": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:serve": "cd docs/api-reference && python3 -m http.server 8080",
    "docs:validate": "tsx scripts/validate-docs.ts",
    "docs:validate:strict": "tsx scripts/validate-docs.ts --strict",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky",
    "video:preview": "npx remotion studio remotion/index.ts",
    "video:render": "tsx scripts/render-promo.ts",
    "audio:generate": "npx tsx scripts/generate-promo-audio.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "tsx scripts/validate-docs.ts --path"
    ]
  },
