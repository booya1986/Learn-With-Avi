    "jsdom": "^25.0.0",
    "lint-staged": "^16.2.7",
    "prisma": "^5.22.0",
    "remotion": "^4.0.422",
    "storybook": "^8.6.15",
    "tailwindcss": "^4",
    "tsx": "^4.19.2",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5",
