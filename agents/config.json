  "delegation_rules": {
    "description": "Rules for the orchestrator to delegate tasks to sub-agents",
    "rules": [
      {
        "condition": "UI component OR styling OR responsive OR frontend visual",
        "agents": ["frontend-engineer"],
        "execution": "single"
      },
      {
        "condition": "API endpoint OR database OR authentication OR server logic",
        "agents": ["backend-engineer"],
        "execution": "single"
      },
      {
        "condition": "ChromaDB OR embeddings OR RAG OR search quality OR semantic",
        "agents": ["rag-pipeline-specialist"],
        "execution": "single"
      },
      {
        "condition": "Requirements OR prioritization OR roadmap OR feature planning",
        "agents": ["product-manager"],
        "execution": "single"
      },
      {
        "condition": "UX OR accessibility OR design OR user flow",
        "agents": ["ui-ux-designer"],
        "execution": "single"
      },
      {
        "condition": "Deployment OR CI/CD OR infrastructure OR monitoring",
        "agents": ["devops-engineer"],
        "execution": "single"
      },
      {
        "condition": "Testing OR quality assurance OR bug verification",
        "agents": ["qa-engineer"],
        "execution": "single"
      },
      {
        "condition": "Documentation OR document OR JSDoc OR TSDoc OR API reference OR README OR guide",
        "agents": ["technical-writer"],
        "execution": "single"
      },
      {
        "condition": "New feature spanning frontend AND backend",
        "agents": ["product-manager", "backend-engineer", "frontend-engineer", "qa-engineer", "technical-writer"],
        "execution": "sequential"
      },
      {
        "condition": "Performance issue across stack",
        "agents": ["backend-engineer", "frontend-engineer", "devops-engineer"],
        "execution": "parallel_then_coordinate"
      },
      {
        "condition": "New API endpoint implementation",
        "agents": ["backend-engineer", "technical-writer"],
        "execution": "sequential"
      },
      {
        "condition": "New component development",
        "agents": ["frontend-engineer", "technical-writer"],
        "execution": "sequential"
      }
    ]
  },

  "coordination_patterns": {
    "sequential": {
      "description": "Execute agents one after another, passing context",
      "use_when": "Tasks have dependencies (e.g., API must be built before UI)"
    },
    "parallel": {
      "description": "Execute agents simultaneously for independent tasks",
      "use_when": "Tasks are independent (e.g., fix frontend bug + optimize backend)"
    },
    "parallel_then_coordinate": {
      "description": "Execute agents in parallel, then coordinate findings",
      "use_when": "Multiple perspectives needed (e.g., performance analysis)"
    },
    "iterative": {
      "description": "Execute agent, review, refine, repeat",
      "use_when": "Exploratory or research tasks"
    }
  },

  "escalation_policy": {
    "user_clarification_needed": "Use AskUserQuestion tool",
    "agent_blocked": "Coordinate with blocking agent to resolve",
    "out_of_scope": "Inform user and suggest alternatives",
    "conflicting_requirements": "Escalate to Product Manager agent"
  }
